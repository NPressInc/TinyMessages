<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:maxHeight="70dp"
    >

    <ImageView
        android:id="@+id/ConvoIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ConvoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fred Meyer"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ConvoIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ConvoDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember to take out the trash"
        app:layout_constraintStart_toStartOf="@id/ConvoTitle"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/ConvoTitle" />

    <TextView
        android:id="@+id/ConvoDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Jan 1 1970"
        app:layout_constraintTop_toTopOf="@id/ConvoTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>